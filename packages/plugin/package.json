{
  "name": "@claudeforge/forge-plugin",
  "version": "0.2.3",
  "description": "FORGE Plugin for Claude Code - Iterative AI Development Engine",
  "type": "module",
  "main": "./dist/hooks/stop.js",
  "bin": {
    "forge-setup": "./dist/cli/setup.js"
  },
  "files": [
    "dist",
    "commands",
    "hooks",
    "templates",
    ".claude-plugin"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch --no-clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@claudeforge/forge-shared": "workspace:*",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^3.1.4",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^3.1.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
